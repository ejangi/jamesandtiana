<%= render :partial => "shared/adminmenu" if permitted_to? :index, :users %>

<h1>Listing pages<% if permitted_to? :new, :pages %> <span class="new"><%= link_to 'New Page', new_page_path %></span><% end %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th colspan="3">Actions</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.permalink %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', new_page_path %>
