<%= form_for(@gift, :html => { :multipart => true }) do |f| %>
	<% if @gift.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@gift.errors.count, "error") %> prohibited this gift from being saved:</h2>

	    <ul>
	    <% @gift.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<dl>
		<dt><%= f.label :title %></dt>
		<dd><%= f.text_field :title %></dd>
		
		<dt><%= f.label :description %></dt>
		<dd><%= f.text_area :description, :rows => 5 %></dd>
		
		<dt><%= f.label :store %></dt>
		<dd><%= f.text_field :store %></dd>
		
		<dt><%= f.label :colour %><dt>
		<dd><%= f.text_field :colour %></dd>
		
		<dt><%= f.label :quantity %></dt>
		<dd><%= f.text_field :quantity %></dd>

		<dt><%= f.label :price %></dt>
		<dd><%= f.text_field :price %></dd>
		
		<dt><%= f.label :photo %></dt>
		<dd><%= f.file_field :photo %></dd>
		
	</dl>
	
	<div class="actions">
	  <%= f.submit %>
	</div>
<% end %>
